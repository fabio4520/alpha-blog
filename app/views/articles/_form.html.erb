<div class="container text-center w-75">
  <%= form_with(model: article) do |form| %>
    <% if article.errors.any? %>
      <div style="color: red">
        <h2><%= pluralize(article.errors.count, "error") %> prohibited this article from being saved:</h2>

        <ul>
          <% article.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-group row mt-4">
      <%= form.label :title, class: "col-sm-2 col-form-label" %>
      <div class="col-sm-10">
        <%= form.text_field :title, class:"form-control shadow rounded", placeholder: "Title of article" %>
      </div>
    </div>

    <div class="form-group row mt-4">
      <%= form.label :description, class: "col-sm-2 col-form-label" %>
      <div class="col-sm-10">
        <%= form.text_area :description, class:"form-control shadow rounded", style: "height: 180px", placeholder: "Description for article" %>
      </div>
    </div>

    <div>
      <%= form.submit class: "mt-3 btn btn-outline-warning" %>
    </div>
  <% end %>
  <%= link_to "Cancel and return to articles", articles_path, class: "text-decoration-none btn btn-outline-secondary mt-2" %>
</div>
