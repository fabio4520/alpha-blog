<h1 class="text-center">Articles</h1>


<div class="container-md w-50 mt-4">
<%= link_to "New article", new_article_path, class: "text-decoration-none btn btn-outline-secondary" %> <br>
<%= link_to "Go back home", root_path, class: "text-decoration-none btn btn-outline-secondary mt-2" %>
  <% @articles.find_each do |article|%>
    <div class="card mb-5 mt-4 shadow rounded text-center">
      <div class="card-header font-italic">
        by Fabio Fiestas
      </div>
      <div class="card-body">
        <h5 class="card-title"><%= link_to article.title, article, class: "text-decoration-none"%></h5>
        <p class="card-text"><%= truncate(article.description, length: 100) %></p>
        <%= link_to "Show", article, class: "btn btn-outline-info" %>
        <%= link_to "Edit", edit_article_path(article), class: "btn btn-outline-warning" %>
        <%= link_to "Delete", article_path(article), data: { 'turbo-method': :delete, 'turbo-confirm': "Are you sure?" }, class: "btn btn-outline-danger" %>
      </div>
      <div class="card-footer text-muted">
        <small>Created <%= time_ago_in_words(article.created_at) %> ago, Edited <%= time_ago_in_words(article.updated_at) %> ago.</small>
      </div>
    </div>
  <% end %>
</div>

<br>
